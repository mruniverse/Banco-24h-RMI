<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="Banco24h" transaction-type="RESOURCE_LOCAL">
    <class>modelo.Cliente</class>
    <class>modelo.Instrutor</class>
    <class>modelo.Treino</class>
    <class>modelo.Administrador</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.mysql.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bancodemadeira"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <!--EclipseLink should create the database schema automatically-->
      <!--<property name="eclipselink.ddl-generation" value="create-tables"/>-->
      <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>
    </properties>
  </persistence-unit>
</persistence>